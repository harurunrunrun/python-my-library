#!/bin/sh
if [ $# = 1 ]; then
  name=$1
  TIMEFORMAT='Exec Time: %R s'
  if [ -f ./input.txt ]; then
    if [ -f ./${name%.*}.py ]; then
      time py -3.8 ${name%.*}.py < input.txt
      echo "Exit Code: ${?}" >&2
    else
      echo ${name%.*}.py is not exist
    fi
  else
    echo input.txt is not exist
  fi
else
  echo requirements is not one
fi
